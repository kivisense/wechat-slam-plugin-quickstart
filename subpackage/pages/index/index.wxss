/**index.wxss**/
page {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.btn-start {
  flex-shrink: 0;
  position: relative;
  width: 302rpx;
  height: 164rpx;
  line-height: 164rpx;
  margin: 450rpx auto 0;
  color: #fff;
  letter-spacing: 1rpx;
}

.btn-start text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
  line-height: 1;
  white-space: nowrap;
  padding: 20rpx;
}

.home-btn {
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.home-bg {
  position: absolute;
  z-index: -1;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
  /* height: 100%; */
}